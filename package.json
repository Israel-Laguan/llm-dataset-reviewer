{
  "name": "llm-dataset-reviewer",
  "displayName": "LLM Dataset Reviewer",
  "description": "Review and edit JSON datasets row by row, optimized for LLM training data",
  "version": "0.1.1",
  "publisher": "israel-laguan",
  "author": {
    "name": "Israel Laguan",
    "email": "israellaguan@gmail.com"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "rimraf dist && npm run compile",
    "watch": "node ./esbuild.js --watch",
    "lint": "biome check .",
    "format": "biome format . --write",
    "test": "node ./src/test/runTest.js"
  },
  "contributes": {
    "configuration": {
      "title": "LLM Dataset Reviewer",
      "properties": {
        "llmDatasetReviewer.maxFileSize": {
          "type": "number",
          "default": 10485760,
          "description": "Maximum file size in bytes (10MB)"
        },
        "llmDatasetReviewer.features": {
          "type": "object",
          "default": {
            "basicNavigation": {
              "enabled": true,
              "dependencies": []
            },
            "statusTracking": {
              "enabled": true,
              "dependencies": []
            }
          },
          "description": "Feature flags configuration"
        }
      }
    },
    "commands": [
      {
        "command": "llm-dataset-reviewer.startReview",
        "title": "Start Dataset Review"
      },
      {
        "command": "llm-dataset-reviewer.nextRow",
        "title": "Move to Next Dataset Row"
      },
      {
        "command": "llm-dataset-reviewer.prevRow",
        "title": "Move to Previous Dataset Row"
      },
      {
        "command": "llm-dataset-reviewer.nextRow",
        "title": "Dataset Review: Next Row"
      },
      {
        "command": "llm-dataset-reviewer.previousRow",
        "title": "Dataset Review: Previous Row"
      },
      {
        "command": "llm-dataset-reviewer.jumpToRow",
        "title": "Dataset Review: Jump to Row"
      },
      {
        "command": "llm-dataset-reviewer.markReviewed",
        "title": "Dataset Review: Mark Row as Reviewed"
      },
      {
        "command": "llm-dataset-reviewer.markFlagged",
        "title": "Dataset Review: Flag Row"
      },
      {
        "command": "llm-dataset-reviewer.addNote",
        "title": "Dataset Review: Add Note to Row"
      },
      {
        "command": "llm-dataset-reviewer.clearStatus",
        "title": "Dataset Review: Clear Row Status"
      }
    ],
    "keybindings": [
      {
        "command": "llm-dataset-reviewer.nextRow",
        "key": "alt+down",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-dataset-reviewer.previousRow",
        "key": "alt+up",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-dataset-reviewer.markReviewed",
        "key": "alt+r",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-dataset-reviewer.markFlagged",
        "key": "alt+f",
        "when": "editorTextFocus"
      }
    ]
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "~1.9.4",
    "@types/node": "~20.17.6",
    "@types/vscode": "~1.95.0",
    "@typescript-eslint/eslint-plugin": "~8.12.2",
    "@typescript-eslint/parser": "~8.12.2",
    "esbuild": "~0.24.0",
    "eslint": "~9.14.0",
    "prettier": "~3.3.3",
    "rimraf": "~6.0.1",
    "typescript": "~5.6.3"
  }
}
